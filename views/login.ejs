<% include partials/header %>


<div class="container">
       <div class="row">
                <h1 style="text-align:center" class="whitetext">Login</h1>
                <div style="width:65%;margin:25px auto">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="username" placeholder="username" autocomplete="off" >
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="password">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Login</button>
                        </div> 
                         <div class="form-group">
                            <a class="btn btn-info btn-lg btn-block" href="/register">Sign Up</a>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-warning btn-sm btn-block" href="/forgot">Forgot Password</a>
                        </div>
                    </form>
                    
<% include partials/footer %>